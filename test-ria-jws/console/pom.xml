<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<artifactId>test-ria-jws-console</artifactId>
	<packaging>jar</packaging>
	<name>test-ria-jws-console</name>
	<description>Description of test-ria-jws-console</description>
	<parent>
		<groupId>org.example.test</groupId>
		<artifactId>test-ria-jws</artifactId>
		<version>1.0</version>
	</parent>
	<properties>
  		<main.class>org.example.test.riajws.Main</main.class>
	</properties>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<archive>
						<manifest>
							<addClasspath>true</addClasspath>
							<mainClass>${main.class}</mainClass>
						</manifest>
						<manifestEntries>
							<Codebase>*</Codebase>
							<Permissions>all-permissions</Permissions>
							<Application-Library-Allowable-Codebase>*</Application-Library-Allowable-Codebase>
							<Caller-Allowable-Codebase>*</Caller-Allowable-Codebase>
							<Application-Name>${project.name}</Application-Name>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>webstart-maven-plugin</artifactId>
				<version>1.0-beta-7</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>jnlp-inline</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<jnlp>
						<outputFile>launch.jnlp</outputFile>
						<inputTemplate>template.vm</inputTemplate>
						<j2seVersion>1.8+</j2seVersion>
						<mainClass>${main.class}</mainClass>
						<properties>
							<argument1>Argumento1</argument1>
							<argument2>Argumento2</argument2>
						</properties>
					</jnlp>
					<sign>
						<keystore>${project.basedir}/src/main/jnlp/keystore/testKeystore.jks</keystore>
						<storepass>temporal</storepass> <!-- ${storepass} -->
						<alias>publisher</alias>
						<verify>false</verify>
					</sign>
					<verbose>true</verbose>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.example.test</groupId>
			<artifactId>test-ria-jws-ws-client</artifactId>
			<version>1.0</version>
		</dependency>
	</dependencies>
</project>